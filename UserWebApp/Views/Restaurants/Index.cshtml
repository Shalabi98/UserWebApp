@model List<UserWebApp.Models.Restaurant>
@using UserWebApp.Models;

@{
    Layout = "_Layout";
}

<style>
    th, td, table {
        text-align: center;
    }
</style>

<div class="container">
    <center><h4>Restaurant Records</h4></center>
    <br />
    <table class="table table-hover table-responsive-xl">
        <thead>
            <tr>
                <th>
                    <i class="fas fa-signature"></i>
                    @Html.DisplayName("Restaurant Name")
                </th>
                <th>
                    <i class="fas fa-city"></i>
                    @Html.DisplayName("City")
                </th>
                <th>
                    <i class="fas fa-road"></i>
                    @Html.DisplayName("Distance from (دوار الداخلية)")
                </th>
                <th>
                    <i class="fas fa-map"></i>
                    @Html.DisplayName("Is Within Range?")
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var restaurant in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => restaurant.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => restaurant.City)
                        </td>
                        <td>
                            @Html.DisplayFor(model => restaurant.Distance)
                        </td>
                        <td>
                            @Html.DisplayFor(model => restaurant.IsWithinDistance)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td style="color: red" colspan="12"><b>Invalid SRID!</b></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

